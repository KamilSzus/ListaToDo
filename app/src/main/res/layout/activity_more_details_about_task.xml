<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    tools:context=".MoreDetailsAboutTask">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/what_needs_to_be_done"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Description:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Create date:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewDateStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/datestart"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="End Date:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewDateEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dateend"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Category:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewTaskCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/category"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Task Status:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewTaskStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/taskStatus"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewHaveAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/haveAttachment"
        android:textSize="20sp" />
</TableLayout>
